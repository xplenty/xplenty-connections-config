{
  "basic_auth":  {
    "auth_strategy": {
      "type": "com.xplenty.connections.strategies.auth.BasicAuthStrategy"
    }
  },
  "intercom":  {
    "auth_strategy": {
      "type": "com.xplenty.connections.strategies.auth.BearerAuthStrategy"
    }
  },
  "facebookadsinsights" : {
    "auth_strategy": {
      "type": "com.xplenty.connections.strategies.auth.BearerAuthStrategy"
    }
  },
  "google-analytics" : {
    "auth_strategy": {
      "type": "com.xplenty.connections.strategies.auth.BearerAuthStrategy"
    }
  },
  "salesforce" : {
    "auth_strategy": {
      "type": "com.xplenty.connections.strategies.auth.BearerAuthStrategy"
    }
  },
  "linkedin" : {
    "auth_strategy": {
      "type": "com.xplenty.connections.strategies.auth.BearerAuthStrategy"
    }
  },
  "shopify": {
    "auth_strategy": {
      "type": "com.xplenty.connections.strategies.auth.CustomAuthStrategy",
      "config": {
        "headers": {
          "X-Shopify-Access-Token" : "${access_token}"
        }
      }
    }
  },
  "googlespreadsheets" : {
    "auth_strategy": {
      "type": "com.xplenty.connections.strategies.auth.BearerAuthStrategy"
    }
  },
  "instagram": {
    "auth_strategy": {
      "type": "com.xplenty.connections.strategies.auth.CustomAuthStrategy",
      "config": {
        "query_params": {
          "access_token" : "${access_token}"
        }
      }
    }
  },
  "youtube" : {
    "auth_strategy": {
      "type": "com.xplenty.connections.strategies.auth.BearerAuthStrategy"
    }
  },
  "marketo" : {
    "auth_strategy": {
      "type": "com.xplenty.connections.strategies.auth.BearerAuthStrategy"
    }
  },
  "xero" : {
    "auth_strategy": {
      "type": "com.xplenty.connections.strategies.auth.XeroAuthStrategy"
    }
  },
  "pinterest": {
    "auth_strategy": {
      "type": "com.xplenty.connections.strategies.auth.CustomAuthStrategy",
      "config": {
        "query_params": {
          "access_token" : "${access_token}"
        }
      }
    }
  },
  "marketingcloud": {
    "auth_strategy": {
      "type": "com.xplenty.connections.strategies.auth.SoapBodyAuthStrategy",
      "config": {
        "add_or_replace": {          
          "/Envelope/Header/fueloauth" : "access_token",
          "/header/fueloauth" : "access_token"
        }
      }
    }
  },
  "marketingcloudrest" : {
    "auth_strategy": {
      "type": "com.xplenty.connections.strategies.auth.BearerAuthStrategy"
    }
  },
  "adwords" : {
    "auth_strategy": {
      "type": "com.xplenty.connections.strategies.auth.BearerAuthStrategy"
    }
  }
}